{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "sysram-elf (LLDB Debug)",
      "logging": {
        "moduleLoad": true,
        "trace": true,
        "engineLogging": true,
        "programOutput": true,
        "exceptions": true
      },
      "filterStderr": true,
      "filterStdout": true,
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/zig-out/bin/sysram-elf",
      "args": [],
      "stopAtEntry": false,
      "stopAtConnect": false,
      "cwd": "${workspaceFolder}",
      "environment": [{ "name": "SOME_VAR", "value": "some_value" }],
      "externalConsole": false,
      "MIMode": "lldb",
      "miDebuggerPath": "lldb-mi",
      "launchCompleteCommand": "exec-continue",
      "debugServerPath": "openocd",
      "debugServerArgs": "-f interface/stlink.cfg  -f target/stm32f4x.cfg -c \"init ; reset halt ; load_image ${workspaceFolder}/zig-out/bin/sysram-elf\"",
      "serverStarted": "Listening on port 3333 for gdb connections",
      "serverLaunchTimeout": 3000,
      "targetArchitecture": "arm",
      "setupCommands": [
        { "text": "-enable-pretty-printing", "ignoreFailures": false }
      ],
      "customLaunchSetupCommands": [
        { "text": "file ${workspaceFolder}/zig-out/bin/sysram-elf" },
        {
          "text": "gdb-remote localhost:3333"
        },
        { "text": "j *0x200001B0" }
      ]
    },
    {
      "name": "sysram-elf (GDB Debug)",
      "logging": {
        "moduleLoad": true,
        "trace": true,
        "engineLogging": true,
        "programOutput": true,
        "exceptions": true
      },
      "filterStderr": true,
      "filterStdout": true,
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/zig-out/bin/sysram-elf",
      "args": [],
      "stopAtEntry": false,
      "stopAtConnect": false,
      "cwd": "${workspaceFolder}",
      "environment": [{ "name": "SOME_VAR", "value": "some_value" }],
      "externalConsole": false,
      "MIMode": "gdb",
      "miDebuggerPath": "arm-ostl-linux-gnueabi-gdb",
      "launchCompleteCommand": "exec-continue",
      "debugServerPath": "openocd",
      "debugServerArgs": "-f interface/stlink.cfg  -f target/stm32f4x.cfg -c \"init ; reset halt\"",
      "serverStarted": "Listening on port 3333 for gdb connections",
      "serverLaunchTimeout": 3000,
      "targetArchitecture": "arm",
      "setupCommands": [
        { "text": "-enable-pretty-printing", "ignoreFailures": false }
      ],
      "customLaunchSetupCommands": [
        { "text": "target extended-remote :3333" },
        {
          "text": "add-symbol-file  ${workspaceFolder}/zig-out/bin/sysram-elf"
        },
        { "text": "load  ${workspaceFolder}/zig-out/bin/sysram-elf" }
      ]
    }
  ]
}
